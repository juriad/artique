<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:cz.artique.client.listFilters"
	xmlns:db="urn:import:com.google.gwt.user.datepicker.client" xmlns:c="urn:import:cz.artique.client.common">

	<ui:with field='res'
		type='cz.artique.client.listFilters.ListFiltersConstants' />

	<g:Grid ui:field="grid">
		<g:row>
			<g:cell>
				<ui:text from='{res.name}' />
			</g:cell>
			<g:customCell>
				<g:TextBox ui:field="name" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from='{res.hierarchy}' />
			</g:cell>
			<g:customCell>
				<g:TextBox ui:field="hierarchy" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from='{res.exported}' />
			</g:cell>
			<g:customCell>
				<c:OptionalValue ui:field="exported">
					<c:value>
						<g:TextBox />
					</c:value>
				</c:OptionalValue>
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<a:QueryFilter ui:field="filter" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from='{res.startFrom}' />
			</g:cell>
			<g:customCell>
				<c:OptionalValue ui:field="startFrom">
					<c:value>
						<db:DateBox />
					</c:value>
				</c:OptionalValue>
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from='{res.endTo}' />
			</g:cell>
			<g:customCell>
				<c:OptionalValue ui:field="endTo">
					<c:value>
						<db:DateBox />
					</c:value>
				</c:OptionalValue>
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from='{res.readState}' />
			</g:cell>
			<g:customCell>
				<c:OptionalValue ui:field="readPicker">
					<c:value>
						<a:ReadStatePicker />
					</c:value>
				</c:OptionalValue>
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from='{res.sortOrder}' />
			</g:cell>
			<g:customCell>
				<a:ListFilterOrderPicker ui:field="orderPicker" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell>
				<ui:text from="{res.shortcut}" />
			</g:cell>
			<g:customCell>
				<c:OptionalValue ui:field="shortcut">
					<c:value>
						<g:TextBox />
					</c:value>
				</c:OptionalValue>
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder>