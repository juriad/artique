<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:cz.artique.client.items">

	<ui:with field='res' type='cz.artique.client.i18n.Constants' />

	<g:DialogBox ui:field="dialog" autoHideEnabled="true"
		modal="true" width="50%" height="50%">
		<g:caption>
			<ui:text from='{res.listFilterEditor}' />
		</g:caption>
		<g:VerticalPanel>
			<a:ManualItemEditor ui:field="editor" />
			<g:HorizontalPanel>
				<g:cell horizontalAlignment="ALIGN_RIGHT" width="100%">
					<g:Button ui:field="deleteButton" /> <!-- delete or wipe -->
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button ui:field="saveButton" /> <!-- save or apply -->
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button ui:field="cancelButton" /> <!-- cancel or close -->
				</g:cell>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder>