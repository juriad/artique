<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:cz.artique.client.labels">

	<ui:with field='res' type='cz.artique.client.labels.LabelsConstants' />

	<g:DialogBox ui:field="dialog" autoHideEnabled="true"
		modal="true" width="50%" height="50%">
		<g:caption>
			<ui:text from='{res.labelsEditor}' />
		</g:caption>
		<g:VerticalPanel>
			<a:LabelsEditor ui:field="editor" />
			<g:HorizontalPanel>
				<g:cell horizontalAlignment="ALIGN_RIGHT" width="100%">
					<g:Button ui:field="saveButton">
						<ui:text from="{res.saveButton}" />
					</g:Button>
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button ui:field="cancelButton">
						<ui:text from="{res.cancelButton}" />
					</g:Button>
				</g:cell>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder>