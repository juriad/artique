<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ce="urn:import:com.google.gwt.user.cellview.client"
	xmlns:db="urn:import:com.google.gwt.user.datepicker.client" xmlns:c="urn:import:cz.artique.client.common"
	xmlns:l="urn:import:cz.artique.client.labels">

	<ui:with field='res' type='cz.artique.client.shortcuts.ShortcutsConstants' />

	<g:HorizontalPanel>
		<g:cell>
			<g:VerticalPanel>
				<g:ScrollPanel>
					<ce:CellList ui:field="cellList" />
				</g:ScrollPanel>
				<g:Button ui:field="actionShortcutButton">
					<ui:text from="{res.addActionShortcut}" />
				</g:Button>
			</g:VerticalPanel>
		</g:cell>
		<g:cell>
			<g:Grid>
				<g:row>
					<g:cell>
						<ui:text from="{res.keyStroke}" />
					</g:cell>
					<g:customCell>
						<g:InlineLabel ui:field="keyStroke" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:cell>
						<ui:text from="{res.type}" />
					</g:cell>
					<g:customCell>
						<g:InlineLabel ui:field="type" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:cell>
						<ui:text from="{res.referenced}" />
					</g:cell>
					<g:customCell>
						<g:InlineLabel ui:field="referenced" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:cell>
					</g:cell>
					<g:customCell>
						<g:Button ui:field="deleteButton">
							<ui:text from="{res.deleteButton}" />
						</g:Button>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder>