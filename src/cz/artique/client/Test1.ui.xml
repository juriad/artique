<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:cz.artique.client.artique">

	<g:DockPanel>
		<g:Dock direction="NORTH">
			<g:FlowPanel>
				<g:Label ui:field="userName" />
				<g:Anchor ui:field="logout">Logout</g:Anchor>
			</g:FlowPanel>
		</g:Dock>
		<g:Dock direction="WEST">
			<g:ScrollPanel width="557px">
				<g:VerticalPanel width="303px" height="100%">
					<g:FlexTable ui:field="sources" />
					<g:FormPanel>
						<g:Grid width="100%" height="100%">
							<g:row>
								<g:customCell>
									<g:Label text="Name" />
								</g:customCell>
								<g:customCell>
									<g:TextBox ui:field="name" />
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:Label text="URL" />
								</g:customCell>
								<g:customCell>
									<g:TextBox ui:field="url" />
								</g:customCell>
							</g:row>
							<g:row>
								<g:customCell>
									<g:Button ui:field="add">Add Source</g:Button>
								</g:customCell>
							</g:row>
						</g:Grid>
					</g:FormPanel>
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:Dock>
		<g:Dock direction="CENTER">
			<a:ArtiqueList ui:field="items" />
		</g:Dock>
		<g:Dock direction="SOUTH">
			<g:FlexTable ui:field="logs" />
		</g:Dock>
	</g:DockPanel>
</ui:UiBinder>